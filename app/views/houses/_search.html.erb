   <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

   <!-- filters-->
   <section class="container">
    <div class="card shadow-lg p-3 mb-5 bg-body-tertiary">
      <div class="card-body">
            
            <%= bootstrap_form_tag url: "/houses/search", method: :get do |form| %>
              <div class="row text-primary-emphasis">
                <div class="col-sm-4">
                    <%= form.text_field :title, label: House.human_attribute_name(:title), value: " ",
                    class:"text-light-emphasis" %>      
                </div>
              <div class="col">
                 <%= form.number_field :living_room, label: House.human_attribute_name(:living_room),
                 value: 1, class:"text-light-emphasis" %> 
              </div>
              <div class="col">
                <%= form.number_field :room, label: House.human_attribute_name(:room),
                value: 1, class: "text-light-emphasis"%>
              </div>
              <div class="col">
                <%= form.number_field :price, label: House.human_attribute_name(:price), value: 500000,
                class:"text-light-emphasis" %>
              </div>
                <div class="col"> 
                    <%= form.number_field :kitchen, label: House.human_attribute_name(:kitchen), value: 1,
                    class:"text-light-emphasis" %>    
                </div>
                
                <div class="col">
                    <%= form.select :property_type, House.property_types, {
                        label: House.human_attribute_name(:property_type)}, class: "text-light-emphasis"%>
                </div>


            </div>
            
            <div class="row text-primary-emphasis">
              <div class="col"> 
                  <%= form.select :type_negotiation, House.type_negotiations, 
                {label: House.human_attribute_name(:type_negotiation)},
                class: "text-light-emphasis" %>  
              </div>
               
              <div class="col">
                <%= form.select :condition, House.conditions, 
                          {label: House.human_attribute_name(:condition)}, class:"text-light-emphasis" %>
              </div>
               <div class="col">
                  <%= form.select :tipology, House.tipologies, 
                            {label: House.human_attribute_name(:tipology)}, class:"text-light-emphasis"%>    
              </div>
               <div class="col">
                <%= form.collection_select :province_code, Province.order(:province_name), :id, :province_name, 
                  { label: Province.model_name.human(count: 1) }, class:"province province_select text-light-emphasis"  %> 
              </div>
               <div class="col">
                    <%= form.collection_select :city_code,  City.order(:city_name), :id, :city_name, 
                      { label: City.model_name.human(count: 1)}  %>
                  
              </div>
            </div>
              
              <div class="mb-3 d-grid gap-2">
                <%= form.submit "Pesquisar", class: "btn btn-pink" %>
              </div>
          <% end %>

      
      </div>
    </div>
  </section>
  <!-- End filters-->

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>