<div class="container col-lg-6 my-4" id="<%= dom_id contact %>" >
  <div class="card shadow-lg p-3 mb-5 bg-body-tertiary rounded">
        <div class="card-body">
          <div class="card-title text-center">
              <i class="bi bi-check-circle-fill fs-1 text-success "></i>
                  <br>
              <span class="fs-1 text-success"> <%= t("controllers.contact") %></span>
          </div>
          </div>
          <div class="text-center my-2 text-primary-emphasis">
          
            <strong>Cliente name:</strong>
            <%= contact.cliente_name %>
            <br/>          
            <strong>Whatsapp:</strong>
            <%= contact.whatsapp %>
            <br/>
            <strong>Email cliente:</strong>
            <%= contact.email_cliente %>
            <br/>
            <strong>Message:</strong>
            <%= contact.message %>
              
          </div>
        </div>
    </div>
  </div>
</div>