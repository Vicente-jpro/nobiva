   <!-- filters-->
   <section class="container">
    <div class="card shadow-lg p-3 mb-5 bg-body-tertiary">
      <div class="card-body">
            
            <%= bootstrap_form_tag url: "/lands/search", method: :get do |form| %>
             
            <div class="row text-primary-emphasis">
              <div class="col"> 
                <%= form.text_field :title_land, label: Land.human_attribute_name(:title_land),
                value: " ", class: 'text-light-emphasis' %>
              </div>               
               <div class="col">
                <%= form.collection_select :province_code, Province.order(:province_name), :id, :province_name, 
                  { label: Province.model_name.human(count: 1) }, class: 'province province_select text-light-emphasis'  %> 
              </div>
               <div class="col">
                    <%= form.collection_select :city_code, City.order(:city_name), :id, :city_name, 
                            { label: City.model_name.human(count: 1)}, class: 'city_select text-light-emphasis'  %>
              </div>

               <div class="col">
                  <%= form.number_field :price, label: Land.human_attribute_name(:price), 
                  value: 5000, class: 'text-light-emphasis' %>
              </div>

            </div>            
  
            <div class="mb-3 d-grid gap-2">
              <%= form.submit "Pesquisar", class: "btn btn-pink" %>
            </div>
              <% end %>
            
      
      </div>
    </div>
  </section>
  <!-- End filters-->